@model WebUI.Models.CartIndexViewModel

@{
    /**/

    ViewBag.Title = "vitryna: Ваша выбор";
}

<h2>@ViewBag.Title</h2>

    <table id="cartTable" class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th class="text-right">Цена</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Cart.Lines)
            {
                <tr>
                    <td class="text-left">@line.Hotel.Title - @line.Hotel.City</td>
                    <td class="text-right">@line.Hotel.PriceForPerson.ToString("# руб")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a class="btn btn-danger" href="@Model.ReturnUrl">Посмотреть еще</a>
        @Html.ActionLink("Оформить бронь", "Checkout", null, new { @class = "btn btn-success" })
    </div>

