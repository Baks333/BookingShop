@model Domain.Entities.BookingDetails

@{
    ViewBag.Title = "Storehouse: форма заказа";
}

<h2>Оформить бронь</h2>
<p>Пожалуйста, введите Ваши следующие данные.</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Данные</h3>
    <div class="form-group">
        <label>Ваше ФИО:</label>
        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
    </div>

    <h3>Детали бронирования</h3>
    foreach (var property in ViewData.ModelMetadata.Properties)
    {
        if (property.PropertyName != "FullName" && property.PropertyName != "GiftWrap")
        {
            <div class="form-group">
                <label>
                    @(property.DisplayName ?? property.PropertyName)
                </label>
                @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
            </div>
        }
    }


    {
<div class="text-center">
    <input class="btn btn-primary" type="submit" value="Обработать" />
</div> 
    }
}

